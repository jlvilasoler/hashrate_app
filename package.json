{
  "name": "facturacion-hrs-con-mongo",
  "version": "1.0.0",
  "description": "HRS GROUP - Sistema profesional de facturación con emisión de PDF y gestión de clientes",
  "keywords": [
    "facturacion",
    "hrs",
    "billing",
    "invoicing"
  ],
  "homepage": "https://github.com/jlvilasoler/hashrate#readme",
  "bugs": {
    "url": "https://github.com/jlvilasoler/hashrate/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jlvilasoler/hashrate.git"
  },
  "license": "ISC",
  "author": "",
  "type": "module",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "concurrently -n server,client -c blue,green \"npm run dev -w server\" \"npm run dev -w client\"",
    "build": "npm run build -w client && npm run build -w server",
    "start": "npm run start -w server",
    "legacy:dev": "nodemon ./src/app.js",
    "legacy:start": "node ./src/app.js"
  },
  "dependencies": {},
  "devDependencies": {
    "concurrently": "^9.2.1",
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  }
}
